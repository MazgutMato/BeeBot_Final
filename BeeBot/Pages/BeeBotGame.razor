@page "/game" 
@inject Map map;
@inject PlayingArea playingArea
@inject ControllerMap controllerMap;
@inject ControllerCommands controllerCommands;

<PageTitle>BeeBot</PageTitle>

<div class="nadpis p-2 m-3 border border-dark rounded border-3">
	@this.map.Description
</div>

<div class="container pozadie border border-dark rounded border-3">
	<div class="row">

		@*mapa*@
		<div class="col-12 col-xl-8">
			<div class="row m-3 d-flex align-content-center position-static">
				<BeeBotMap/>
			</div>
		</div>

		<div class="col-12 col-xl-4 panel">

			<MapChange/>

			<ComandLine/>

		</div>

	</div>
</div>

@code{
	#region Overrides of ComponentBase

	protected override void OnInitialized()
	{
		base.OnInitialized();
		this.playingArea.mode = Mode.Playing;
	}

	#endregion
}